<%- include('../../../partials/head.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <div class=" card card-body mx-5">
                    <form action="/post/create" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                          <label for="title">Enter your post title</label> 
                          <input type="text" name="title" id="title" class="form-control"> 
                        </div>
                        <div class="form-group">
                            <label for="tiny-mce-post-body">Emter your post Body</label>
                            <textarea name="body" id="tiny-mce-post-body" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="tags">Enter some tag(max 10)</label>
                            <input type="text" name="tags" id="tags" placeholder="tag1,tag2,tag3...." class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-pepend">
                                <span class="input-group-text">upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" name="post-thumbnail" class="custom-file-input" >
                                <label for="inputGroupFile" class="custom-file-label">Choose File</label>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="create post">
                    </form>
                </div>
            </div>
        </div>
    </div>


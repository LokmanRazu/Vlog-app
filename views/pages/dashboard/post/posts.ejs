<%- include('../../../partials/head.ejs') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10 my-5">
            <div class="card card-body">

                <h5>List of my post</h5>
                <div class="row">
                    <% if(createdPost.length ===0) { %>
                        <div class="text-center text-muted">
                            <p>There is no post available right now</p>
                            <a href="/posts/create" class="btn btn-primary btn-sm">Create post now</a>
                        </div>
                        <% } else { %>
                            
                                <div class="card col-sm-3 m-3">
                                    <% if(createdPost.title && createdPost.body){ %> 
                                        <div>
                                            <%= createdPost.title %> 
                                        </div>
                                   <div>
                                    <%= createdPost.body %> 
                                   </div>
                                    <% } %> 
                                </div>  
                                <% } %>
                              
                </div>
            </div>

        </div>

    </div>

</div>




<div class="Dashboard-footer">
    <footer>
        <p class="lead"> YOU CAN WRITE WHAT EVER YOU WANT! </p>
    </footer>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>